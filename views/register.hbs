<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 auth-left">
            <div class="row auth-form mb-4">
                <div class="col-12 col-sm-12">
                    <div class="auth-text-top mb-4">
                      {{#if notRegistered}}
                      <script>alert("email already exist");</script>
                      {{/if}}
                      {{#if userExist}}
                      <script>alert("user name already exist");</script>
                      {{/if}}
                        <h1>Create Account</h1>
                        <small>Already have an account? <a href="/">Login to Account</a></small>
                    </div>
                    <form action="#" method="POST" id="regsiterSubmit">
                      <div class="form-group">
                          <label for="username">User Name</label>
                          <div class="input-icon">
                              <i class="mdi mdi-account"></i>
                              <input type="text" class="form-control" id="username" name="username"
                                     placeholder="Enter Your Display Name" autofocus required>
                          </div>
                      </div>

                        <div class="form-group">
                            <label for="username">Name</label>
                            <div class="input-icon">
                                <i class="mdi mdi-account"></i>
                                <input type="text" class="form-control" id="name" name="name"
                                       placeholder="Enter Your Name" autofocus required>
                            </div>
                        </div>
                        <!-- {{#if notRegistered }}
                        <!-- <script>
                        alert("Email Already Exist");
                        </script> -->
                        <!-- {{/if}} -->
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <div class="input-icon">
                                <i class="mdi mdi-email"></i>
                                <input type="email" class="form-control" id="email" name="email"
                                       placeholder="Enter Your Email" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <div class="input-icon">
                                <i class="mdi mdi-lock"></i>
                                <span class="passtoggle mdi mdi-eye toggle-password"></span>
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="Enter Your Password" required>
                                       <input type="checkbox" onclick="myFunction()">Show Password
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">Date of Birth</label>
                            <div class="input-icon">
                                <i class="mdi mdi-lock"></i>
                                <span class="passtoggle mdi mdi-eye toggle-password"></span>
                                <input type="date" class="form-control" id="birthday" name="birthday"
                                 required>
                            </div>
                        </div>
                        <div class="d-flex form-check">
                            <input type="checkbox" class="filter" id="remember" checked>
                            <label for="remember">I Accept <a href="#">Terms and Conditions</a></label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block btn-c mt-4 mb-4" id="register">Create an account</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-8 auth-right d-lg-flex d-none bg-gradient" id="particles">
            <div class="logo">

            </div>
            <div class="heading">
                <h3>Data Sutram ||Nodejs</h3>
            </div>
            <div class="shape"></div>
        </div>
    </div>
</div>
